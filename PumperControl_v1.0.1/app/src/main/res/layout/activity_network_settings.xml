<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raindi.pumpercontrol.activity.NetworkSettingsActivity"
    android:orientation="vertical">

    <com.example.raindi.pumpercontrol.activity.NetworkSettingsTitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.raindi.pumpercontrol.activity.NetworkSettingsTitleLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:text="上报地址"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/send_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_edittext"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/send_url"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/getUrlTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:text="下发地址"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/get_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/getUrlTextView"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_edittext"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="3" />


        <Button
            android:id="@+id/btn_network_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/get_url"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:background="@drawable/btn_normal"
            android:text="确定"
            android:textSize="30dp" />

    </RelativeLayout>


</LinearLayout>
